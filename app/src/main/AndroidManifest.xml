<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dicoding.githubuserappv2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GithubUserAppV2">
        <activity
            android:name=".ui.ListFavoriteActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ThemeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.FavoriteActivity"
            android:exported="false"
            android:label="@string/title_activity_favorite"
            android:theme="@style/Theme.GithubUserAppV2.NoActionBar" />
        <activity
            android:name=".ui.DetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:configChanges="orientation|screenSize"
            android:exported="false" />
    </application>

</manifest>